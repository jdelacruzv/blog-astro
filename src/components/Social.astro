---
const { platform, username } = Astro.props;
---

<style>
	a {
		background-color: #007bff;
		padding: 0.5rem 1.5rem;
		color: #fff;
		text-decoration: none;
		border-radius: 0.5rem;
	}
	a:hover {
  	background-color: #0056b3;
	}
</style>

<a href={`https://www.${platform}.com/${username}`} target="_blank"
	>{platform}</a
>
